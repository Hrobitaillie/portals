{
    "manifest_version": 3,
    "name": "Portals",
    "version": "1.0.0",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "options_page": "src/options/index.html",
    "action": {
        "default_title": "Portals"
    },
    "background": {
        "service_worker": "src/background/index.ts",
        "type": "module"
    },
    "commands": {
        "toggle-overlay": {
            "suggested_key": {
                "default": "Alt+Shift+Space"
            },
            "description": "Afficher/Masquer l'overlay"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content/main.ts"
            ],
            "run_at": "document_idle"
        }
    ],
    "permissions": [
        "storage",
        "commands",
        "tabs"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}